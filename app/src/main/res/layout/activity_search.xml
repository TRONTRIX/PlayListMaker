<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:theme="@style/Theme.PlayListMakerTX"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tool_bar_in_searchActivity"
        android:theme="@style/Theme.PlayListMakerTX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_back_16dp"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:title="@string/Search"
        app:titleTextColor="?attr/colorOnPrimary"
        android:fontFamily="@font/ys_display_medium"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:theme="@style/Theme.PlayListMakerTX"
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standart_padding"
        android:orientation="horizontal"
        android:clipToOutline="true"
        android:background="@drawable/lauout_bg"
        android:backgroundTint="?attr/colorSecondary">

        <EditText
            android:theme="@style/Theme.PlayListMakerTX"
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/Mini_standart_padding_8dp"
            android:paddingLeft="3dp"
            android:background="?attr/colorSecondary"
            android:hint="@string/Search"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:textColorHint="?attr/colorAccent"
            android:drawableStart="@drawable/search_24dp"
            android:drawableTint="?attr/colorAccent"
            android:drawablePadding="8dp"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <ImageView
            android:theme="@style/Theme.PlayListMakerTX"
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/clear_16dp"
            android:layout_marginRight="11dp"
            app:tint="?attr/colorAccent"
            android:background="?attr/colorSecondary"
            />
    </LinearLayout>

    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue_YP"
        android:visibility="gone"
        android:layout_marginTop="140dp"/>

    <LinearLayout
        android:id="@+id/linearHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/youLookingTrack"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/text_size_19"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/ys_display_medium"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListTrackHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/music_card_in_search_activity"
            tools:itemCount="10"
            android:visibility="visible"/>
        <Button
            android:id="@+id/cleerHistotyButtonSearch"
            android:theme="@style/Theme.PlayListMakerTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="?attr/colorOnPrimary"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="14sp"
            android:text="@string/clearHistory"
            app:cornerRadius = "@dimen/standart_padding"
            android:paddingHorizontal="14dp"
            android:paddingVertical="10dp"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/music_card_in_search_activity"
        tools:itemCount="10"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            style="@style/searchImageOnSearchActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="102dp"/>
        <TextView
            style="@style/Theme.PlayListMakerTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notFound"
            android:layout_marginTop="@dimen/standart_padding"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/Standart_text_size"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/networkLostError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            style="@style/networkLostImageOnSearchActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="102dp"/>
        <TextView
            style="@style/Theme.PlayListMakerTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/networkProblem"
            android:layout_marginTop="@dimen/standart_padding"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/Standart_text_size"/>
        <TextView
            style="@style/Theme.PlayListMakerTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standart_padding"
            android:text="@string/networkError"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:textSize="@dimen/Standart_text_size"/>

    <Button
        android:id="@+id/updateErrorButtonSearch"
        android:theme="@style/Theme.PlayListMakerTX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="?attr/colorOnPrimary"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/update"
        app:cornerRadius = "@dimen/standart_padding"
        android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>