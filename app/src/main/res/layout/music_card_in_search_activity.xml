<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_music_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.PlayListMakerTX"
    android:background="?attr/colorPrimary"
    android:orientation="horizontal"
    android:padding="@dimen/Mini_standart_padding_8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/image_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/placeholder_45dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/Mini_standart_padding_8dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="@dimen/Mini_standart_padding_6dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/name_track"
            style="@style/Theme.PlayListMakerTX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="No Reply"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/Text_size_in_RecyclerView_on_seacrActivity"
            android:fontFamily="@font/ys_display_regular"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name_track"
                android:theme="@style/Theme.PlayListMakerTX"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/Mini_text_size_in_down_bar_musicCaard"
                android:fontFamily="@font/ys_display_regular"
                tools:text="The Beatles"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="?attr/colorSurface"/>

            <ImageView
                android:theme="@style/Theme.PlayListMakerTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ellipse_1_3dp"
                app:tint="?attr/colorSurface"
                android:layout_gravity="center"
                android:padding="@dimen/Mini_standart_padding_5dp"/>
            <TextView
                android:id="@+id/time_track"
                android:theme="@style/Theme.PlayListMakerTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:12"
                android:textColor="?attr/colorSurface"
                android:layout_marginRight="@dimen/Mini_standart_padding_8dp"
                android:textSize="@dimen/Mini_text_size_in_down_bar_musicCaard"
                android:fontFamily="@font/ys_display_regular"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:theme="@style/Theme.PlayListMakerTX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_forward_24dp"
        android:layout_gravity="center"
        app:tint="?attr/colorSurface"
        android:layout_marginHorizontal="@dimen/Mini_standart_padding_5dp"/>


</LinearLayout>