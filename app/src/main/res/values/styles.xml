<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonOnMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/standart_padding</item>
        <item name="android:layout_marginRight">@dimen/standart_padding</item>
        <item name="android:layout_marginTop">@dimen/standart_padding</item>
        <item name="android:layout_height">@dimen/standart_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/white_YP</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/Standart_text_size</item>
        <item name="android:textColor">@color/black_YP</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_YP</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextViewOnSettingActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ImageButtonOnSettingActivity">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:tint">?attr/colorSurface</item>
    </style>
    <style name="FrameLayoutOnSettingActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standart_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="BackGroundMainActivity">
        <item name="android:theme">@style/Theme.PlayListMakerTX</item>
        <item name="android:background">@color/blue_YP</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>